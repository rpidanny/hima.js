{
  "name": "hima.js",
  "version": "0.0.0",
  "description": "Download images from Himawari-8 Geo-Stationary Satellite",
  "main": "dist/index.ts",
  "types": "dist/index.d.ts",
  "bin": {
    "hima": "dist/index.js"
  },
  "scripts": {
    "build": "./node_modules/typescript/bin/tsc",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint && jest ./test/*",
    "dev": "ts-node examples/download-latest.ts",
    "semantic-release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm run lint && npm test"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rpidanny/hima.js.git"
  },
  "keywords": [
    "himawari"
  ],
  "author": "Abhishek <abhishek.rpidanny@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rpidanny/hima.js/issues"
  },
  "homepage": "https://github.com/rpidanny/hima.js#readme",
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "^9.1.1",
    "@types/gm": "^1.18.9",
    "@types/hapi__joi": "^17.1.4",
    "@types/jest": "^26.0.8",
    "@types/tmp": "^0.2.0",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "eslint": "^7.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.2.2",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "semantic-release": "^17.1.1",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "tsc": "^1.20150623.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "gm": "^1.23.1",
    "got": "^11.5.1",
    "moment": "^2.27.0",
    "tmp": "^0.2.1"
  },
  "files": [
    "dist/**/*"
  ]
}
